<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.aradsheybak.storeforchallenge">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Components.Base"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.StoreForChallenge">
        <activity android:name=".Activity.Login.LoginActivity"></activity>
        <activity
            android:name=".Dialog.NoInternet.NoInternetActivity"
            android:theme="@style/DialogTouchFalse" />
        <activity android:name=".Activity.Spalsh.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Main.MainActivity" />
    </application>

</manifest>